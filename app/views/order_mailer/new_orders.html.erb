<h1><%= t("orders_mailer.hi", name: @order.user_name) %></h1>
<%= t "orders_mailer.content_new_order" %>
<%= t("orders_mailer.name_receiver", name_receiver: @order.name_customer) %>
<%= t("orders_mailer.phone_number", phone_number: @order.phone_number) %>
<%= t("orders_mailer.address", address: @order.address) %>
<table class="table">
  <thead>
    <tr>
      <%= t "product.name" %></th>
      <%= t "product.quantity" %></th>
      <%= t "product.price" %></th>
      <%= t "orders.total_order" %></th>
    </tr>
  </thead>
  <tbody>
    <% @order_detail.each do |detail|%>
      <tr>
        <td><%= detail.product_name %></td>
        <td><%= detail.quantity %></td>
        <td><%= t(number_to_currency(detail.product_price)) %></td>
        <td><%= t(number_to_currency(detail.product_price*detail.quantity)) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr>
<h3>
  <b><%= t "orders.total_order" %></b>:
  <%= t(number_to_currency(@order.total_money)) %>
</h3>
