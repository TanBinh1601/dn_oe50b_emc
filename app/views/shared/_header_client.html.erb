<div class="wrapper row0">
  <div id="topbar" class="hoc clear">
    <div class="fl_left">
      <ul class="nospace">
        <li><%= link_to "", home_client_path, class: "fas fa-home fa-lg" %></li>
        <li><%= link_to t("language.en"), root_path(locale: :en) %></li>
        <li><%= link_to t("language.vi"), root_path(locale: :vi) %></li>
        <% if user_signed_in? %>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
              <%= current_user.email %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("user.new.profile"), "#" %></li>
              <li><%= link_to t("user.new.settings"), edit_user_registration_path %></li>
              <li><%= link_to t("user.new.order_history"), orders_path %></li>
              <li class="divider"></li>
              <li><%= link_to t("user.new.logout"), logout_path, method: :delete %></li>
            </ul>
          </li>
          <li><%= link_to t("user.new.order"), carts_path %></li>
        <% else %>
          <li><%= link_to t("header.login"), user_session_path %></li>
          <li><%= link_to t("header.sign_up"), new_user_registration_path %></li>
        <% end %>
      </ul>
    </div>
    <div class="fl_right">
      <ul class="nospace">
        <li><i class="fas fa-phone rgtspace-5"></i><%= t "header.phone_contact" %> </li>
        <li><i class="fas fa-envelope rgtspace-5"></i> <%= t "header.email_contact" %></li>
        <% if user_signed_in? %>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
              <i class="fas fa-bell rgtspace-5"></i>
               <span class="btn-badge btn-badge--red">
                  <%= current_user.notifications.unread %>
               </span>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu scroll-noti">
              <%= render current_user.notifications.sort_by_created %>
            </ul>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
