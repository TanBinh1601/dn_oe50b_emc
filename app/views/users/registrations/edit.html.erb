<% provide :title, t("title.edit_user") %>
<h2><%= t "user.update.td" %></h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label t "user.new.email" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label t "user.new.name" %><br />
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label t "user.new.id_card" %><br />
        <%= f.text_field :id_card, autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label t "user.new.phone_number" %><br />
        <%= f.text_field :phone_number, autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label t "user.new.address" %><br />
        <%= f.text_field :address, autofocus: true, class: "form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div><%= "#{t("user.update.waiting_confirmation")} #{resource.unconfirmed_email}" %></div>
      <% end %>

      <div class="field">
        <%= f.label t"user.new.pass" %> <i><%= t "user.update.note_pass" %></i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= "#{@minimum_password_length} #{t("user.update.note_pass3")}" %></em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label t "user.new.pass_confir" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label t "user.new.current_password" %> <i><%= t "user.update.note_pass2" %></i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit t("user.update.save"), class: "btn btn-primary button_custom" %>
      </div>
    <% end %>
  </div>
</div>
