<% provide :title, t("title.sign_up") %>
<% provide :button_text, t("button.create") %>
<h1><%= t"title.sign_up" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label t("user.new.email") %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label t("user.new.pass") %>
        <% if @minimum_password_length %>
        <em>(<%= "#{@minimum_password_length} #{t("user.update.note_pass3")}" %>)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label t("user.new.pass_confir") %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit yield(:button_text), class: "btn btn-primary button_custom" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
